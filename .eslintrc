{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    // Enviroment variables
    "__DEVELOPMENT__": true,
    "__LOGLEVEL__": true,

    // Global library
    "log": true,
  },
  "rules": {
    "no-tabs": 0,
    "linebreak-style": 0,
    "no-console": 0,
    "indent": [1, "tab"],

    // React
    "react/jsx-indent": [1, "tab"],

    // Import
  },
  "plugins": [
    "react", "import", "jsx-a11y", "json"
  ]
}
